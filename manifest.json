{
  "name": "FT adviser extension",
  "version": "0.1",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "16": "assets/img/finetune_logo-16.png",
      "48": "assets/img/finetune_logo-48.png",
      "128": "assets/img/finetune_logo-128.png"
    },
    "default_popup": "assets/popup/index.html",
    "default_title": "A description will come here"
  },
  "icons": {
    "16": "assets/img/finetune_logo-16.png",
    "48": "assets/img/finetune_logo-48.png",
    "128": "assets/img/finetune_logo-128.png"
  }
}
